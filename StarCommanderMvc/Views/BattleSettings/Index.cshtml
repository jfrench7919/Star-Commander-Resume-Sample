@model StarCommanderMvc.Models.Battle

@{
    ViewBag.Title = "BattleSettings";
}

@using (Html.BeginForm())
{
    if (Session["BattleField"] != null)
    {
        StarCommander.BattleFields.IBattleField myBattleField = (StarCommander.BattleFields.IBattleField)Session["BattleField"];
        if (myBattleField != null)
        {
            Model.myBattleField = myBattleField;
        }
    }

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">

        <h2>Battle Settings</h2>

        <div class="row form-group">
            @Html.LabelFor(model => model.battleFieldType, new { @class = "text-right control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.battleFieldType, Model.battleFieldTypes, new { @class = "form-control" })
            </div>
        </div>

        <div class="row form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Set field size" class="btn btn-default" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
</div>
}

